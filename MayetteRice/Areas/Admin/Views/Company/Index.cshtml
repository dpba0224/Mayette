@model List<Company>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2 text-uppercase">Company List</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pt-2 pb-2">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Create New Company
                </a>
            </div>
        </div>
    
        @* The table in Index was revised to have better UI using DataTables and its supporting js files *@
        <table id="tableData" class="table table-bordered table-striped" style="width:100%">
            <thead class="text-center">
                <tr>
                    <th>Name</th>
                    <th>Street Address</th>
                    <th>Barangay</th>
                    <th>City</th>
                    <th>Province</th>
                    <th>Postal Code</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}
    