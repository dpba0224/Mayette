@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" width="500" height="300"/>
                        <div class="card-body pb-0 pt-3">
                            <div class="pl-1">
                                <h6 class="card-title font-weight-bold text-primary text-uppercase text-center">@product.Title</h6>
                            </div>

                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Price: Php @product.Price.ToString()
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    Discounted Price: Php @product.DiscPrice.ToString()
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control pt-2 pb-2">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>